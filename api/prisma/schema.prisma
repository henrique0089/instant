generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatRoom {
  id String @id @default(uuid())

  members        String[]
  createdAt      DateTime        @default(now())
  pinnedChatRoom PinnedChatRoom?

  @@map("chat-rooms")
}

model PinnedChatRoom {
  id String @id @default(uuid())

  ownerId    String
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  chatRoomId String   @unique

  @@map("pinned-chat-rooms")
}

model TextMessage {
  id String @id @default(uuid())

  content     String
  senderId    String
  recipientId String
  createdAt   DateTime

  @@map("text-messages")
}

model MediaMessage {
  id String @id @default(uuid())

  url         String
  type        MessageType
  senderId    String
  recipientId String
  createdAt   DateTime

  @@map("media-messages")
}

enum MessageType {
  IMAGE
  AUDIO
}
